#!/bin/bash

#
# This file takes down basic colour information used throughout the
# installation so that no pesky variables remain
#
# @author the_DJDJ
# @since  8.3-systemd
#

# Basic Markup
unset COLOUR_SET_BOLD
unset COLOUR_SET_DIM
unset COLOUR_SET_UNDERLINE
unset COLOUR_SET_BLINK
unset COLOUR_SET_REVERSE
unset COLOUR_SET_HIDDEN

# Reset
unset COLOUR_RESET
unset COLOUR_RESET_BOLD
unset COLOUR_RESET_DIM
unset COLOUR_RESET_UNDERLINE
unset COLOUR_RESET_BLINK
unset COLOUR_RESET_REVERSE
unset COLOUR_RESET_HIDDEN

# 8/16 Foreground Colours
unset COLOUR_FOREGROUND_DEFAULT
unset COLOUR_FOREGROUND_BLACK
unset COLOUR_FOREGROUND_RED
unset COLOUR_FOREGROUND_GREEN
unset COLOUR_FOREGROUND_YELLOW
unset COLOUR_FOREGROUND_BLUE
unset COLOUR_FOREGROUND_MAGENTA
unset COLOUR_FOREGROUND_CYAN
unset COLOUR_FOREGROUND_GREY_LIGHT
unset COLOUR_FOREGROUND_GREY_DARK
unset COLOUR_FOREGROUND_RED_LIGHT
unset COLOUR_FOREGROUND_GREEN_LIGHT
unset COLOUR_FOREGROUND_YELLOW_LIGHT
unset COLOUR_FOREGROUND_BLUE_LIGHT
unset COLOUR_FOREGROUND_MAGENTA_LIGHT
unset COLOUR_FOREGROUND_CYAN_LIGHT
unset COLOUR_FOREGROUND_WHITE

# 8/16 Background Colours
unset COLOUR_BACKGROUND_DEFAULT
unset COLOUR_BACKGROUND_BLACK
unset COLOUR_BACKGROUND_RED
unset COLOUR_BACKGROUND_GREEN
unset COLOUR_BACKGROUND_YELLOW
unset COLOUR_BACKGROUND_BLUE
unset COLOUR_BACKGROUND_MAGENTA
unset COLOUR_BACKGROUND_CYAN
unset COLOUR_BACKGROUND_GREY_LIGHT
unset COLOUR_BACKGROUND_GREY_DARK
unset COLOUR_BACKGROUND_RED_LIGHT
unset COLOUR_BACKGROUND_GREEN_LIGHT
unset COLOUR_BACKGROUND_YELLOW_LIGHT
unset COLOUR_BACKGROUND_BLUE_LIGHT
unset COLOUR_BACKGROUND_MAGENTA_LIGHT
unset COLOUR_BACKGROUND_CYAN_LIGHT
unset COLOUR_BACKGROUND_WHITE
